<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/data_layout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/m_value_tv"
        style="@style/BaseTabletTextStyle"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="@string/m1"/>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <Spinner
            android:id="@+id/is_scale_tv"
            style="@style/BaseTabletTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/scale_item" />
    </FrameLayout>


    <EditText
        android:id="@+id/scale_tv"
        style="@style/BaseTabletTextStyle"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:inputType="numberSigned|numberDecimal"
        android:text="@string/workpiece_id" />

    <EditText
        android:id="@+id/upper_limit_tv"
        style="@style/BaseTabletTextStyle"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:inputType="numberSigned|numberDecimal"
        android:text="@string/event" />

    <EditText
        android:id="@+id/lower_limit_tv"
        style="@style/BaseTabletTextStyle"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:inputType="numberSigned|numberDecimal"
        android:text="@string/result" />

    <EditText
        android:id="@+id/stable_time_tv"
        style="@style/BaseTabletTextStyle"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:inputType="numberSigned|numberDecimal"
        android:layout_height="match_parent"
        android:text="@string/m1" />

    <TextView
        android:id="@+id/name_tv"
        android:visibility="gone"
        style="@style/BaseTabletTextStyle"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="@string/m1_group" />

</LinearLayout>