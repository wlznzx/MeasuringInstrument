<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include
        layout="@layout/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            style="@style/CodeTextStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/code_num" />

        <TextView
            style="@style/CodeTextStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/code_name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/code_rg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/code_1"
                style="@style/CodeRBStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:checked="true"
                android:background="#64455A64"
                android:text="01" />

            <RadioButton
                android:id="@+id/code_2"
                style="@style/CodeRBStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="02" />

            <RadioButton
                android:id="@+id/code_3"
                style="@style/CodeRBStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="03" />

            <RadioButton
                android:id="@+id/code_4"
                style="@style/CodeRBStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="04" />

            <RadioButton
                android:id="@+id/code_5"
                style="@style/CodeRBStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="05" />

            <RadioButton
                android:id="@+id/code_6"
                style="@style/CodeRBStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="06" />

            <RadioButton
                android:id="@+id/code_7"
                style="@style/CodeRBStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="07" />

            <RadioButton
                android:id="@+id/code_8"
                style="@style/CodeRBStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="08" />

            <RadioButton
                android:id="@+id/code_9"
                style="@style/CodeRBStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="09" />

            <RadioButton
                android:id="@+id/code_10"
                style="@style/CodeRBStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="10" />

            <RadioButton
                android:id="@+id/code_11"
                style="@style/CodeRBStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:checked="false"
                android:visibility="gone"
                android:text="11" />
        </RadioGroup>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/code_1_edt"
                style="@style/CodeTextStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#64455A64"
                android:text="@string/code1_name" />

            <EditText
                android:id="@+id/code_2_edt"
                style="@style/CodeTextStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="@string/code2_name" />

            <EditText
                android:id="@+id/code_3_edt"
                style="@style/CodeTextStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="@string/code3_name" />

            <EditText
                android:id="@+id/code_4_edt"
                style="@style/CodeTextStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:checked="false"
                android:text="@string/code4_name" />

            <EditText
                android:id="@+id/code_5_edt"
                style="@style/CodeTextStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/code5_name" />

            <EditText
                android:id="@+id/code_6_edt"
                style="@style/CodeTextStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/code6_name" />

            <EditText
                android:id="@+id/code_7_edt"
                style="@style/CodeTextStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/code7_name" />

            <EditText
                android:id="@+id/code_8_edt"
                style="@style/CodeTextStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/code8_name" />

            <EditText
                android:id="@+id/code_9_edt"
                style="@style/CodeTextStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/code9_name" />

            <EditText
                android:id="@+id/code_10_edt"
                style="@style/CodeTextStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/code10_name" />

            <EditText
                style="@style/CodeTextStyle"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/code11_name" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>